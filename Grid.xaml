<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FlexLayoutDemo_RERS.Grid"
             Title="Grid">
    <Grid ColumnDefinitions="*, *, *"
      RowDefinitions="*, *, *, *">
        <BoxView BackgroundColor="LightGreen" Grid.Row="0" Grid.Column="0"/>
        <BoxView BackgroundColor="LightBlue" Grid.Row="0" Grid.Column="1"/>
        <BoxView BackgroundColor="LightGreen" Grid.Row="0" Grid.Column="2"/>
        <BoxView BackgroundColor="LightBlue" Grid.Row="1" Grid.Column="0"/>
        <BoxView BackgroundColor="Blue" Grid.Row="1" Grid.Column="1"/>
        <BoxView BackgroundColor="LightBlue" Grid.Row="1" Grid.Column="2"/>
        <BoxView BackgroundColor="LightGreen" Grid.Row="2" Grid.Column="0"/>
        <BoxView BackgroundColor="LightBlue" Grid.Row="2" Grid.Column="1"/>
        <BoxView BackgroundColor="LightGreen" Grid.Row="2" Grid.Column="2"/>
    </Grid>
</ContentPage>